<script type="module">
window.abrirVentana = function() {
    // Funciones utilitarias
    function getValor(selector) {
        const el = document.querySelector(selector);
        return el ? el.value : '';
    }
    function getSelect(selector) {
        const el = document.querySelector(selector);
        return el ? el.options[el.selectedIndex].text : '';
    }
    function getCheck(selector) {
        const el = document.querySelector(selector);
        return el ? (el.checked ? 'Sí' : 'No') : 'No';
    }

    const imagen = '<img src="/src/assets/CDMX_logo.png" alt="Logo CDMX" class="mx-1 my-4 w-40 h-auto" />';

    // Inputs de texto
    const identificador = getValor('input[name="identificador"]');
    const modelo = getValor('input[name="modelo"]');
    const inventario = getValor('input[name="inventario"]');
    const marca = getValor('input[name="marca"]');
    const serie = getValor('input[name="serie"]');
    const capacidad = getValor('input[name="capacidad"]');
    const procesadorTipo = getValor('input[name="procesadorTipo"]');
    const procesadorVelocidad = getValor('input[name="procesadorVelocidad"]');
    const RAM = getValor('input[name="RAM"]');
    const segmento = getValor('input[name="segmento"]');
    const marcaMonitor = getValor('input[name="marcaMonitor"]');
    const SO = getValor('input[name="SO"]');
    const estado = getValor('input[name="estado"]');
    const observaciones = getValor('input[name="observaciones"]');
    const area = getValor('input[name="area"]');
    const cargo = getValor('input[name="cargo"]');

    // Selects
    const tipoEquipo = getSelect('select[name="tipoEquipo"]');
    const tipoTecladocheckbox = getSelect('select[name="tipoTecladocheckbox"]');
    const tipoMonitorcheckbox = getSelect('select[name="tipoMonitorcheckbox"]');
    const tipoMousecheckbox = getSelect('select[name="tipoMousecheckbox"]');
    const usuario = getSelect('select[name="usuario"]');
    const responsable = getSelect('select[name="responsable"]');

    // Checkboxes
    const impresoraFotocopiadora = getCheck('input[name="impresoraFotocopiadora"]');
    const teclado = getCheck('input[name="teclado"]');
    const monitor = getCheck('input[name="monitor"]');
    const mouse = getCheck('input[name="mouse"]');
    const lector = getCheck('input[name="lector"]');
    const usb = getCheck('input[name="usb"]');
    const sd = getCheck('input[name="sd"]');

    const tecladoHtml = teclado === 'Sí'
        ? `<div class="flex items-center space-x-4">
                <div>
                    <input type="checkbox" checked disabled class="w-4 h-4 ml-4 text-blue-600 bg-gray-100 border-gray-300 rounded-sm" />
                    <label class="ms-2 text-sm font-medium text-gray-900 dark:text-gray-300">Teclado</label>
                </div>
                <div>
                    <input type="text" value="${tipoTecladocheckbox}" readonly class="block w-full p-2 text-gray-900 border border-gray-300 rounded-lg bg-gray-50 text-sm" />
